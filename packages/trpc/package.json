{
  "name": "@workspace/trpc",
  "version": "1.0.0",
  "description": "Centralized tRPC server and client for chat-automation",
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": {
      "import": "./src/index.ts",
      "types": "./src/index.ts"
    },
    "./server": {
      "import": "./src/server/index.ts",
      "types": "./src/server/index.ts"
    },
    "./client": {
      "import": "./src/client/index.ts",
      "types": "./src/client/index.ts"
    },
    "./client/react": {
      "import": "./src/client/react.tsx",
      "types": "./src/client/react.tsx"
    },
    "./adapters/express": {
      "import": "./src/adapters/express.ts",
      "types": "./src/adapters/express.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "typecheck": "tsc --noEmit"
  },
  "keywords": [
    "trpc",
    "api",
    "typescript"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@tanstack/react-query": "^5.80.7",
    "@trpc/client": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "@trpc/tanstack-react-query": "^11.8.1",
    "superjson": "^2.2.2",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "express": "^4.18.0 || ^5.0.0",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "express": {
      "optional": true
    },
    "react": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/express": "^5.0.6",
    "@types/node": "^22.15.32",
    "@types/react": "^19.2.7",
    "@workspace/typescript-config": "workspace:*",
    "typescript": "^5.9.3"
  }
}
